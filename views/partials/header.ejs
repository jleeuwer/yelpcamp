    <body>

        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
        
                    <a class="navbar-brand" href="/"><i class="fas fa-campground"></i> YelpCamp</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                  <ul class="nav navbar-nav">
                    <li class="<%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a href="/campgrounds"><i class="fas fa-home"></i> Home</a></li>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">
                    <% if (vCurrentUser && notifications) { %>
                        <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Notifications <span class="badge"><%= notifications.length %></span></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/notifications">View past notifications</a>
                                </li>
                                <% notifications.forEach(function(notification) { %>  
                                    <li>
                                        <a href="/notifications/<%= notification.id %>">
                                            <%= notification.username %> created a new campground
                                        </a>
                                    </li>
                                <% }); %>
                            </ul>
                        </li>
                    <% } %>
                    <% if (vCurrentUser || vCurrentUser && vCurrentUser.vIsAdmin) { %>
                            <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/users/<%= vCurrentUser._id %>/edit">Edit profile <i class="fas fa-users"></i></a></li>
                    <% } %>
                      <% if(!vCurrentUser){ %>
                          <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/login">Login <i class="fa fa-user"></i></a></li>
                          <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a href="/register">Sign Up <i class="fa fa-user-plus"></i></a></li>
                      <% } else { %>
                          <li><a href="#">Signed In As <%= vCurrentUser.username %></a></li>
                          <li><a href="/logout">Logout <i class="fas fa-sign-out-alt"></i></a></li>
                      <% } %>
                  </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <% if (error && error.length > 0) { %> 
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if (success && success.length > 0) { %> 
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
        </div>

