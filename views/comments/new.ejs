<% include ../partials/header %>

<div style="width: 50%; margin: 50px auto">
    <h1 style="text-align: center">Add comment to <%= campground.Name %></h1>
    <br>
    <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
        <div class="form-group row">
            <label class="col-sm-2 col-sm-offset-2 col-form-label" for="comment">Comment</label>
            <div class="col-sm-6">    
                <input id="comment" class="form-control" type="text" name="comment[Text]" placeholder="Comment">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4 col-sm-offset-5"> 
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </div>
        <a href="/campgrounds">Go Back</a>
    </form>
</div>

<% include ../partials/footer %>
