<% include ../partials/header %>

    <div style="width: 60%; margin: 50px auto">
        <h1 style="text-align: center">Create a new campground</h1>
        <form action="/campgrounds" method="POST">
            <div class="form-group row">
                <label class="col-sm-3 col-sm-offset-1 col-form-label" for="naam">Campground : </label>
                <div class="col-sm-6">
                    <input id="naam" class="form-control" type="text" maxlength="40" name="vName" placeholder="Naam">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-sm-offset-1 col-form-label " for="url">Url : </label>
                <div class="col-sm-6">
                    <input id="url"  class="form-control" type="text" name="vUrl" placeholder="Url">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-sm-offset-1 col-form-label" for="description">Description : </label>
                <div class="col-sm-6">
                    <input id="description" class="form-control" type="text" name="Description" placeholder="description">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-sm-offset-1 col-form-label" for="prijs">Price : </label>
                <div class="col-sm-6">
                    <input id="prijs" class="form-control" type="number" name="Price" placeholder="price" min="0.01" step="0.01">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-sm-offset-1 col-form-label" for="location">Location : </label>
                <div class="col-sm-6">
                    <input id="location" class="form-control" type="text" name="Location" id="Location" placeholder="National Park">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 offset-sm-3">
                    <button class="btn btn-primary btn-block">Submit!</button>
                </div> 
            </div>
            <a href="/campgrounds">Go Back</a>
        </form>
    </div>        


<% include ../partials/footer %>
