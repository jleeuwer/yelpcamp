<% include ../partials/header %>

    <h1 style="text-align: center">Create a new campground</h1>
    <br>
    <div style="width: 60%; margin: 50px auto">
        <form action="/campgrounds" class="form-horizontal" method="POST">
            <div class="form-group">
                <label class="col-sm-3 col-sm-offset-1 control-label: left" for="naam">Campground : </label>
                <div class="col-sm-6">
                    <input id="naam" class="form-control" type="text" name="vName" placeholder="Naam">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-sm-offset-1 control-label: left " for="url">Url : </label>
                <div class="col-sm-6">
                    <input id="url"  class="form-control" type="text" name="vUrl" placeholder="Url">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-sm-offset-1 control-label" for="description">Description : </label>
                <div class="col-sm-6">
                    <input id="description" class="form-control" type="text" name="Description" placeholder="description">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-sm-offset-1 control-label" for="prijs">Price : </label>
                <div class="col-sm-6">
                    <input id="prijs" class="form-control" type="number" name="Price" placeholder="price" min="0.01" step="0.01">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-sm-offset-1 control-label" for="location">Location : </label>
                <div class="col-sm-6">
                    <input id="location" class="form-control" type="text" name="Location" id="Location" placeholder="National Park">
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block">Submit!</button>
            </div>
            <a href="/campgrounds">Go Back</a>
        </form>
    </div>        


<% include ../partials/footer %>
