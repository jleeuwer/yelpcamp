<% include ../partials/header %>
<!-- <div class="container"> -->
    <div class="row">
        <h1 style="text-align: center">Create a new campground</h1>
        <br>
        <div style="width: 30%; margin: 50px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="vName" placeholder="Naam">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="vUrl" placeholder="Url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="Description" placeholder="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="Price" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="Location">Location</label>
                    <input class="form-control" type="text" name="Location" id="Location" placeholder="National Park">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Submit!</button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>        
    </div>
<!-- </div> -->
<% include ../partials/footer %>
