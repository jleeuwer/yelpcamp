      <header class="jumbotron">
          <div class="container">
            <h1><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
            <p>View all our hand-picked campgrounds</p>      
            <p>
              <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campground</a>
            </p>
          </div>
      </header>

      <div class="row">
        <div class="col-lg-12">
          <h3>Our Most Popular Campgrounds!</h3>
        </div>
      </div>
      <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% pcampgrounds.forEach(function(campground){ %>
          <div class="col-md-3 col-sm-6">
              <div id="thumbnail" class="thumbnail register">
                <img src="<%= campground.Image %>">
                <div class="caption">
                    <h4><%= campground.Name %></h4>
                </div>
                <p>
                  <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
              </div>
          </div>
        <% }); %>
      </div>
