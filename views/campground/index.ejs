  <% include ../partials/header %>

    <!-- <div class="container"> -->
      <header class="jumbotron mt-2">
          <div class="container">
            <h1><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
            <p>View all our hand-picked campgrounds</p>      
            <p>
              <a class="btn-sm btn-primary" href="/campgrounds/new">Add a new campground</a>
            </p>
            <p>
              <form action="/campgrounds" method="GET" class="form-inline">
                  <div class="form-group">
                      <input type="text" name="vsearch" placeholder="search" class="">
                      <button class="btn-sm btn-primary" type="submit"><i class="fas fa-search"></i></button>
                      <!-- <input type="submit" value="Search" class="btn-sm btn-primary"> -->
                  </div>
              </form>
            </p>
          </div>
      </header>

      <div class="row">
        <div class="col-lg-12">
          <h3>Our Most Popular Campgrounds!</h3>
        </div>
      </div>
      <div class="row row-cols-1 row-cols-md-4">
        <% pcampgrounds.forEach(function(campground){ %>
          <div class="col mb-4">
              <div id="thumbnail" class="card border-primary h-100 mb-2 register ">
                <img class="card-img-top img-responsive" src="<%= campground.Image %>">
                <div class="card-body">
                  <div class="card-img-overlay white-color">
                    <h5><%= campground.Name %></h5>
                  </div>
                  <p class="card-text">
                    <div class="">
                      <a href="/campgrounds/<%= campground._id %>" class="card-link btn btn-primary">More Info</a>
                    </div>
                  </p>
                </div>
              </div>
          </div>
        <% }); %>
      </div>
    <!-- </div> -->

    <% include ../partials/footer %>
