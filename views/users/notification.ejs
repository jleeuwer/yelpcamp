<% include ../partials/header %>

    <div class="card border-primary mb-3" style="max-width: 18rem;">
        <% if (par_allNotifications.length === 0) { %>
            <p class="btn btn-warning">No notifications found!</p>
        <% } %>    
        <% par_allNotifications.forEach(function(notification) { %>  
            <div class="row no-gutter text-white bg-primary">
                <div class="col-md-4">
                    <!-- <img src="..." class="card-img" alt="..."> -->
                    <% if (!par_allNotifications.isRead) { %>
                        <h1><i class="fas fa-check"></i></h1>
                    <% } else { %>
                        <h1><i class="far fa-times-circle"></i></h1>
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">Notification</h5>
                        <p class="card-text"><%= notification.username %> created a new campground</p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>
